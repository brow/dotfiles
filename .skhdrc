# Focus
ctrl + alt - j :    yabai -m window --focus recent
ctrl + alt - h :    yabai -m window --focus prev || \
                    yabai -m window --focus last
ctrl + alt - l :    yabai -m window --focus next || \
                    yabai -m window --focus first

# Swap
ctrl + alt + shift - j :    yabai -m window --swap recent
ctrl + alt + shift - h :    yabai -m window --swap prev
ctrl + alt + shift - l :    yabai -m window --swap next

# Resize
cmd + ctrl - h :    yabai -m window --ratio rel:-0.166666
cmd + ctrl - l :    yabai -m window --ratio rel:00.166666
cmd + ctrl - j :    yabai -m window --toggle zoom-parent
cmd + ctrl - k :    yabai -m window --ratio abs:00.5
